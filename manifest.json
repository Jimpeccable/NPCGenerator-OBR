{
  "name": "NPC Generator",
  "description": "Generates random NPCs for Owlbear Rodeo",
  "version": "1.0",
  "author": "James",
  "manifest_version": 2,
  "background": {
    "scripts": ["npc-generator.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' https://jimpeccable.github.io; object-src 'self'"
}
