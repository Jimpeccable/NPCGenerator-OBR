{
  "name": "NPC Generator",
  "description": "Generates random NPCs for use in Owlbear Rodeo.",
  "version": "1.0.0",
  "manifest_version": 1,
  "background": {
    "scripts": ["js/npc-generator.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://app.owlbear.rodeo/*"],
      "css": ["css/styles.css"],
      "js": ["js/npc-generator.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
