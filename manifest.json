{
    "manifest_version": 3,
    "name": "NPC Generator",
    "version": "1.0.0",
    "description": "A tool for generating random NPCs in Owlbear Rodeo.",
    "permissions": ["activeTab"],
    "background": {
        "service_worker": "npc-generator.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["npc-generator.js"]
        }
    ]
}
